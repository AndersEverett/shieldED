<div class="admin-container">
  <div class="row">
    <div class="large-7 columns">
      <h1>Admin Report Detail</h1>
    </div>
  <div class="large-9 columns">
    <ul class="right button-group">
      <li><a href="#" class="button">Issue Keys</a></li>
      <li><a href="#" class="button">Archive</a></li>
      <li><a href="#" class="button">Export to CSV</a></li>
    </ul>
  </div>
</div>


<div class="row">
  <div class="large-12 columns">
    <div id="slider">
      <ul class="orbit" data-orbit>
       <li>
         <div id="chart_div"></div>
       </li>
       <li class="active">
         <%=image_tag("bar-char.png" )%>
         <img height = "15">
       </li>
